---
import HeaderFooterLayout from '../../layouts/header-footer-layout.astro';
import { Container, Row, Col } from '../../components/grid';
import Heading from '../../components/heading';
import Paragraph from '../../components/paragraph';
import Section from '../../components/section';
import Stack from '../../components/stack';
import LinkCard from '../../components/link-card';
import FAQ from '../../components/faq';

const faqItems = [
	{
		question: "How do I reset my password?",
		answer: "You can reset your password by clicking the 'Forgot Password' link on the login page. Enter your email address and we'll send you a link to create a new password."
	},
	{
		question: "How do I export my budget data?",
		answer: "To export your data, go to Settings > Data Management > Export. You can choose to export in CSV or JSON format. Your export will include all transactions, budgets, and categories."
	},
	{
		question: "Can I share my budget with family members?",
		answer: "Yes! Budget Warden supports shared budgets. Navigate to your budget settings and select 'Share Budget'. You can invite family members via email and set their permission levels."
	},
	{
		question: "What happens to my data if I cancel my subscription?",
		answer: "Your data is retained for 30 days after cancellation. During this period, you can reactivate your account and restore access to all your data. After 30 days, data is permanently deleted."
	},
	{
		question: "Is my financial data secure?",
		answer: "Absolutely. We use bank-level 256-bit encryption for all data transmission and storage. We never store your bank credentials, and all connections are secured via SSL/TLS."
	},
	{
		question: "How do I connect my bank account?",
		answer: "Go to Accounts > Add Account and select your bank from the list. You'll be redirected to your bank's secure login page. Budget Warden uses read-only access and cannot make transactions on your behalf."
	}
];
---

<HeaderFooterLayout
	title="Support - Budget Warden"
	description="Get help with Budget Warden. Open a support ticket, browse our user guides, or find answers in our FAQ section."
>
	<Section>
		<Container>
			<Stack gap="xl">
        <Row>
          <Col span={10}>
            <Stack gap="md">
              <Heading level="h1" size={40}>Support</Heading>
              <Paragraph fontSize={26}>
                Need help? We're here to assist you. Open a support ticket, browse our comprehensive user guides, or check our FAQ for quick answers.
              </Paragraph>
            </Stack>
          </Col>
        </Row>

				<Row largeGutter={true}>
					<Col span={6} break="md" largeGutter={true}>
						<LinkCard
							title="Open a Ticket"
							description="Have an issue or question? Submit a support ticket and our team will get back to you as soon as possible."
							href="/support/contact"
							iconType="ticket"
							client:load
						/>
					</Col>
					<Col span={6} break="md" largeGutter={true}>
						<LinkCard
							title="User Guides"
							description="Browse our documentation for step-by-step tutorials, feature explanations, and best practices."
							href="/support/guides"
							iconType="book"
							client:load
						/>
					</Col>
				</Row>
			</Stack>
		</Container>
	</Section>

	<Section>
    <Container>
      <Row>
        <Col span={10}>
          <Stack gap="lg">
            <Heading level="h2" size={32}>Frequently Asked Questions</Heading>
            <FAQ items={faqItems} client:load />
          </Stack>
        </Col>
      </Row>
		</Container>
	</Section>
</HeaderFooterLayout>
