---
import * as stylex from '@stylexjs/stylex';
import { colors } from '../styles/theme.stylex';
import CookieConsent from '../components/cookie-consent.astro';

export const styles = stylex.create({
	body: {
		width: '100%',
		height: '100%',
		margin: 0,
		backgroundColor: colors.ash200,
    fontSize: {
      default: '24px',
      '@media (max-width: 640px)': '19px',
    },
	},
	content: {
		overflow: 'hidden',
	},
});

const {
	title = 'Budget Warden',
	description = 'Budget Warden is an intuitive and powerful personal finance tool designed to simplify budgeting. Manage your finances effortlessly with customizable categories, visual progress tracking, and proven budgeting methods like Zero-Sum and Envelope budgeting. Take control of your financial future today. Sign up for free!'
} = Astro.props;
---

<!doctype html>
<html lang="en" {...stylex.props(styles.body)}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description}>
		<link rel="sitemap" href="/sitemap-index.xml" />
    <script data-goatcounter="https://budgetwarden.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	</head>
	<body {...stylex.props(styles.body)}>
		<main {...stylex.props(styles.content)}>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	*, *:before, *:after {
		box-sizing: border-box;
		font-family: -apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui, helvetica neue, Cantarell, Ubuntu, roboto, noto, helvetica, arial, sans-serif;
	}
</style>
