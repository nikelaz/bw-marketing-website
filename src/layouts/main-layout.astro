---
import '@fontsource-variable/inter';
import stylex from '@stylexjs/stylex';
import { colors } from '../styles/theme.stylex';

export const styles = stylex.create({
	body: {
		width: '100%',
		height: '100%',
		margin: 0,
		backgroundColor: colors.ash200,
		fontFamily: "'Inter Variable', sans-serif",
		fontSize: '24px',
	},
	content: {
		overflow: 'hidden',
	},
});

const {
	title = 'Budget Warden',
	description = 'Budget Warden is an intuitive and powerful personal finance tool designed to simplify budgeting. Manage your finances effortlessly with customizable categories, visual progress tracking, and proven budgeting methods like Zero-Sum and Envelope budgeting. Take control of your financial future today. Sign up for free!'
} = Astro.props;
---

<!doctype html>
<html lang="en" {...stylex.attrs(styles.body)}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description}>
	</head>
	<body {...stylex.attrs(styles.body)}>
		<main {...stylex.attrs(styles.content)}>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	*, *:before, *:after {
		box-sizing: border-box;
	}
</style>
